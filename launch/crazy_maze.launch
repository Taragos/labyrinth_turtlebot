<?xml version="1.0"?>
<launch>
  <!-- Export env variable so that gazebo finds the models and materials -->
  <env name="GAZEBO_MODEL_PATH" value="$(find labyrinth_turtlebot)/models" />
  
  <!-- We resume the logic in empty_world.launch, changing only the name of 
    the world to be launched -->
  <include file="$(find labrob_gazebo)/launch/labrob_gazebo.launch">
    <arg name="world_name" value="$(find labyrinth_turtlebot)/worlds/crazy_maze.world" />
    <arg name="spawn_args" value="-x 0 -y 0 -z 0"/>
    <arg name="show_rviz" value="true"/>
    <arg name="paused" value="false"/>
    <arg name="debug" value="false"/>  
    <arg name="gui" value="true"/>
  </include>
  
  <!-- Start the node that handles the map exploration percentage -->
  <node name="challenge_server" pkg="labyrinth_turtlebot" type="challenge_server.py" output="screen" />

</launch>
